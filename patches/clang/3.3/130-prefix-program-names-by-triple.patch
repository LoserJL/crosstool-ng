 std::string ToolChain::GetProgramPath(const char *Name) const {
+  // don't try to prefix clang
+  if(strcmp(Name, "clang")) {
+    // try first with prefixed by triple
+    std::string targetName = getTripleString();
+    targetName += "-";
+    targetName += Name;
+    std::string targetProgram = D.GetProgramPath(targetName.c_str(), *this);
+    if(targetProgram != targetName) {
+      return targetProgram;
+    }
+  }
   return D.GetProgramPath(Name, *this);
 }
 
